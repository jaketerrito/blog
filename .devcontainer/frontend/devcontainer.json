{
	"name": "Frontend",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "devcontainer",
	"workspaceFolder": "/app",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}, // installs github cli
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {} // installs zsh with oh-my-zsh configured
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"forwardPorts": [
		5173, 3000
	],
	"mounts": [
		"source=zsh-history,type=volume,target=/app/.zsh_history", // Persist zsh history
		"source=frontend-node-modules,type=volume,target=/app/node_modules", // Store node_modules in volume
		"source=../../.git,type=bind,target=/app/.git",
		"source=../.,type=bind,target=/app"
	]
}