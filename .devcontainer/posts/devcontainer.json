{
	"name": "Posts",
	"dockerComposeFile": "${localWorkspaceFolder}/docker-compose.yaml",
	"service": "posts-devcontainer",
	"workspaceFolder": "/posts",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}, // installs github cli
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {} // installs zsh with oh-my-zsh configured
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"ms-python.debugpy"
			]
		}
	},
	"mounts": [
		"source=posts-zsh-history,type=volume,target=/posts/.zsh_history", // Persist zsh history
		"source=${localWorkspaceFolder}/.git,type=bind,target=/posts/.git",
		"source=${localWorkspaceFolder}/posts,type=bind,target=/posts"
	],
	// Keep only this service and its dependencies running
	"runServices": ["posts-devcontainer", "posts-db"]
}